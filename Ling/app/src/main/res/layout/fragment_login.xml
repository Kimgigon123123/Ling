<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".login.LoginFragment"
    android:orientation="vertical"
    android:padding="30dp"
    android:background="@drawable/main_back_gradient_animation">

    <ImageView
        android:layout_marginTop="80dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:src="@drawable/linglogo"/>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login or sign Up for free."/>

    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:helperTextEnabled="true"
        android:layout_margin="10dp"
        android:textColorHint="#878787"
        android:hint="아이디"
        app:helperTextTextColor="#8A8A8A">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_id"
            android:inputType="text"
            android:background="@color/ling_main_color4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:helperTextEnabled="true"
        android:layout_margin="10dp"
        android:textColorHint="#878787"
        android:hint="비밀번호"
        app:helperTextTextColor="#8A8A8A">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_pw"
            android:inputType="textPassword"
            android:background="@color/ling_main_color4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <CheckBox
        android:id="@+id/chk_login"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인 정보 기억하기"/>



    <androidx.appcompat.widget.AppCompatButton
        style="@style/LingButtonStyle"
        android:id="@+id/btn_login"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인"/>

    <FrameLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/btn_text_join"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"/>

        <TextView
            android:id="@+id/btn_text_find"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이디/비번 찾기"/>

    </FrameLayout>

</LinearLayout>