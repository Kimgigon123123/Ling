<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".store.InsertBankInfoActivity"
    android:orientation="vertical">


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/btn_back"
            android:src="@drawable/baseline_arrow_back_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:text="계좌정보 입력"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>







    </LinearLayout>

    <TextView
        android:textSize="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="계좌번호를 입력해주세요"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:paddingLeft="10dp"
            android:gravity="center"
            android:background="@color/gray"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_launcher_background"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>


            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_marginLeft="5dp"
                android:orientation="vertical"
                android:layout_width="90dp"
                android:layout_height="wrap_content">



                <TextView
                    android:textColor="@color/black"
                    android:text="계좌번호"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:text="카카오뱅크"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>




            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"

                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                app:boxStrokeColor="@color/black"

                app:hintEnabled="false"
                app:hintTextColor="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="계좌번호를 입력해주세요"
                    android:inputType="number" />

            </com.google.android.material.textfield.TextInputLayout>




        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:background="#616161"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/black"
                android:layout_marginBottom="10dp"
                android:text="이름"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="김기곤"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_above="@+id/btn_regi"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"
            android:orientation="vertical">


            <CheckBox

                android:id="@+id/jean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="약관 모두 동의" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                app:cardCornerRadius="10dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"

                    android:text="개인정보 어쩌고 저쩌고 \n서비스 이용약관 어쩌고 저쩌고 \n전자 금융거래 이용약관 어쩌고"
                    android:textColor="@color/black" />

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <TextView
            android:layout_alignParentBottom="true"
            android:id="@+id/btn_regi"
            android:textSize="20dp"
            android:textStyle="bold"
            android:padding="20dp"
            android:textColor="@color/white"
            android:background="@color/basket"
            android:textAlignment="center"
            android:text="등록하기"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>



</LinearLayout>