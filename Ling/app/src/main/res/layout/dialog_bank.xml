<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imgv_close"
        android:layout_gravity="center"
        android:src="@drawable/bottom_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"/>

    <FrameLayout
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>



    <LinearLayout
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">


        <TextView


            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:text="은행을 선택해주세요"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>





    </LinearLayout>


    <LinearLayout
        android:layout_marginBottom="30dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/into_bank1"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginRight="5dp"
            android:layout_gravity="center"
            android:src="@drawable/kakaobank"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <TextView
            android:layout_gravity="center"
            android:text="카카오뱅크"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

        <LinearLayout
            android:id="@+id/into_bank2"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView

                android:layout_marginRight="5dp"
                android:layout_gravity="center"
                android:src="@drawable/nh"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

            <TextView
                android:layout_gravity="center"
                android:text="NH"
                android:layout_width="80dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/into_bank3"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginRight="5dp"
                android:layout_gravity="center"
                android:src="@drawable/gwangju"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

            <TextView
                android:layout_gravity="center"
                android:text="광주은행"
                android:layout_width="80dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </LinearLayout>




    </LinearLayout>











