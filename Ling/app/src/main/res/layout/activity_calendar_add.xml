<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".calendar.CalendarAddActivity"
    android:background="#F9F5F6"
    android:paddingTop="24dp"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:background="#FDCEDF"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgv_calendar_cancel"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_before"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="일정추가"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv_calendar_save"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저장"
            android:textSize="18dp"
            android:textColor="#000000"
            android:textStyle="bold"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/border_layout"
        >
        <EditText
            android:id="@+id/edt_calendar_title"
            android:layout_marginLeft="10dp"
            android:paddingVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="일정 타이틀"
            android:textSize="17dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"
            android:layout_marginVertical="10dp"
            />
        <LinearLayout
            android:paddingVertical="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >




            <Spinner
                android:id="@+id/spinner"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:dropDownVerticalOffset="40dp"
                />


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"
            android:layout_marginVertical="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_calendar_sche"
                android:layout_marginLeft="10dp"
                android:paddingVertical="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="일정 날짜"
                android:layout_weight="1"
                android:textSize="17dp"
                />
            <ImageView
                android:layout_marginRight="10dp"
                android:id="@+id/imgv_calendar_check"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                 android:src="@drawable/more_calendar"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"
            android:layout_marginVertical="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            >
            <TextView
                android:layout_marginLeft="10dp"
                android:paddingVertical="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="푸시 알림 수신"
                android:layout_weight="1"
                android:textSize="17dp"
                />
            <CheckBox
                android:id="@+id/push_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>



    </LinearLayout>


</LinearLayout>