<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".store.myinfo.DeliveryActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginBottom="5dp"
        android:gravity="center_vertical"
        android:background="@drawable/shape"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView

            android:layout_marginLeft="15dp"
            android:id="@+id/imgv_before"
            android:src="@drawable/ic_before"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:textSize="17dp"
            android:id="@+id/tv_date"
            android:textColor="#fff"

            android:text="배송조회"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">



                <TextView
                    android:background="#4CAF50"
                    android:text="　"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>



            </androidx.cardview.widget.CardView>

            <TextView
                android:textColor="#4CAF50"
                android:layout_gravity="center"
                android:text="배송중"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:text="..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">



                <TextView
                    android:background="@color/gray"
                    android:text="　"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>



            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_gravity="center"
                android:text="배송완료"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:text="..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">



                <TextView
                    android:background="@color/gray"
                    android:text="　"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>



            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_gravity="center"
                android:text="배송취소"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>



    </LinearLayout>


    <TextView
        android:layout_marginBottom="20dp"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:text="상품 정보"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_weight="6"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/imgv_item"
            android:src="@drawable/ic_launcher_background"
            android:layout_width="150dp"
            android:layout_height="150dp"/>

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/tv_delivery_state"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/green"
                android:text="배송중"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/tv_name"
                android:layout_marginBottom="5dp"
                android:textSize="22dp"
                android:textColor="@color/black"
                android:text="상품이름"
                android:layout_width="wrap_content"
                android:layout_height="35dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_price"
                    android:textSize="16dp"
                    android:text="123123원"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textSize="16dp"
                    android:text=" · "
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_cnt"
                    android:textSize="16dp"
                    android:text="1개"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>





            </LinearLayout>

            <TextView
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:id="@+id/tv_total_price"
                android:textSize="20dp"
                android:text="총 가격"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:background="#2222"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_return"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp"
            app:backgroundTint="@color/basket"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1.5"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="반품신청"
            style="@style/Widget.MaterialComponents.Button"
            />

        <Button
            android:id="@+id/btn_buy"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp"
            app:backgroundTint="@color/purchace"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="다시구매"
            style="@style/Widget.MaterialComponents.Button"
            />


    </LinearLayout>






</LinearLayout>