<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".store.myinfo.StoreMyinfoActivity"
    android:background="@drawable/main_back_gradient_animation"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_gravity="center"

            android:id="@+id/imgv_before"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@drawable/baseline_navigate_before_24_black" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내 정보   "
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton

            android:layout_marginLeft="10dp"
            style="@style/LingButtonStyle"
            android:id="@+id/btn_basket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/baseline_shopping_basket_24"
            android:text=" 장바구니"
            android:padding="5dp"
            android:layout_gravity="right|center"
            />
        <androidx.appcompat.widget.AppCompatButton

            style="@style/LingButtonStyle"
            android:id="@+id/btn_zzim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_dibs"
            android:text="찜목록"
            android:padding="5dp"
            android:layout_gravity="right|center"
            />
        <androidx.appcompat.widget.AppCompatButton

            style="@style/LingButtonStyle"
            android:id="@+id/btn_myinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/baseline_info"
            android:text="내 정보"
            android:padding="5dp"
            android:layout_gravity="right|center"
            />




    </LinearLayout>

    <FrameLayout
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="50dp">

        <ImageView

            android:scaleType="centerCrop"
            android:src="@drawable/store_grade"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>



    </androidx.cardview.widget.CardView>



        <LinearLayout
            android:layout_weight="3"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">



            <TextView
                android:id="@+id/tv_name"
                android:layout_marginTop="10dp"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="이름"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="보유금액: "/>

                <TextView
                    android:id="@+id/tv_money"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"/>


                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="원"/>



            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="주소지: "/>

                <TextView
                    android:id="@+id/tv_address"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="농성동"/>




            </LinearLayout>








        </LinearLayout>


        <LinearLayout
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <Button
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/purchace"
                android:id="@+id/btn_charge"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp"
                android:text="충전하기"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:backgroundTint="@color/basket"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:id="@+id/btn_address"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp"
                android:text="주소변경"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            

        </LinearLayout>






    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView

            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="찜목록"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/imgv_intoZZim"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:src="@drawable/baseline_add_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_empty1"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:text="목록이 비었습니다."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>

    <LinearLayout
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recv_zzim"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="115dp"/>

    </LinearLayout>



    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView

            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="구매목록"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/imgv_intoBylist"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:src="@drawable/baseline_add_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_empty2"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:text="목록이 비었습니다."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>

        <LinearLayout

            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recv_buylist"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="115dp"/>

        </LinearLayout>



    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView

            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="반품목록"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/imgv_return"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:src="@drawable/baseline_add_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_empty3"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:text="목록이 비었습니다."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>

        <LinearLayout
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recv_return"
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:layout_margin="10dp" />


        </LinearLayout>



    </androidx.cardview.widget.CardView>




</LinearLayout>