<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".store.myinfo.ReturnActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginBottom="5dp"
        android:gravity="center_vertical"
        android:background="@drawable/shape"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView

            android:layout_marginLeft="15dp"
            android:id="@+id/imgv_before"
            android:src="@drawable/ic_before"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:textSize="17dp"
            android:id="@+id/tv_date"
            android:textColor="#fff"

            android:text="반품신청"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </LinearLayout>


    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgv_item"
            android:src="@drawable/ic_launcher_background"
            android:layout_width="150dp"
            android:layout_height="150dp"/>

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/tv_return_state"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/green"
                android:text="배송중"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/tv_name"
                android:layout_marginBottom="5dp"
                android:textSize="22dp"
                android:textColor="@color/black"
                android:text="상품이름"
                android:layout_width="wrap_content"
                android:layout_height="35dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_price"
                    android:textSize="16dp"
                    android:text="123123원"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textSize="16dp"
                    android:text=" · "
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_cnt"
                    android:textSize="16dp"
                    android:text="1개"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>



            </LinearLayout>


        </LinearLayout>





    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_margin="10dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp">


        <LinearLayout
            android:background="@color/gray"
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:textSize="25dp"
                android:textColor="@color/black"
                android:text="환불예정금액"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_weight="8"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="총 상품 가격"/>




                <TextView
                    android:id="@+id/tv_total_price"
                    android:layout_weight="2"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3000원"/>







            </LinearLayout>



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_weight="8"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="배송비"/>




                <TextView
                    android:layout_weight="2"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3000원"/>







            </LinearLayout>

            <FrameLayout
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@color/black"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:layout_weight="6"
                    android:text="총 환불예정금액"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:id="@+id/tv_total_return_price"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:layout_weight="4"
                    android:text="24000원"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>


            </LinearLayout>








        </LinearLayout>




    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:src="@drawable/baseline_info_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textSize="22dp"
            android:textColor="@color/black"
            android:text="반품안내"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </LinearLayout>



    <TextView
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="상품 수령일로부터 7일이 경과된 상품의 경우, 반품이 어렵습니다.\n고객님의 부주의로 상품의 가치가 훼손된 경우에도 반품이 어렵습니다." />


    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:background="#2222"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancle"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp"
            app:backgroundTint="@color/basket"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1.5"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="취소"
            style="@style/Widget.MaterialComponents.Button"
            />

        <Button
            android:id="@+id/btn_return"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp"
            app:backgroundTint="@color/purchace"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="반품신청"
            style="@style/Widget.MaterialComponents.Button"
            />


    </LinearLayout>


</LinearLayout>