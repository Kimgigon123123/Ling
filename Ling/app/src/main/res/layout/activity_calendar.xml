<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/calendar_backjpg"
    tools:context=".calendar.CalendarActivity"
    android:orientation="vertical"
    android:paddingTop="24dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgv_calendar_home"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/home"
            />
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="캘린더"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            />


        <ImageView
            android:layout_marginHorizontal="10dp"
            android:id="@+id/imgv_calendar_add"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_add_24"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
        <LinearLayout
            android:id="@+id/ln_more_Calendar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/more_calendar"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textSize="10dp"
                android:text="다른 일정 확인"
                android:layout_gravity="center"

                />
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="1"
            android:text="현재날짜 : "
            android:layout_gravity="center"

            />
        <TextView
            android:id="@+id/tv_calendar_now"
            android:layout_marginRight="20dp"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="날짜 나올 예정"
            />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recv_schedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </FrameLayout>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_layout"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="15dp"
        >
        <LinearLayout
            android:background="@drawable/border_layout_notop"
            android:paddingVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_100"
                android:layout_marginLeft="10dp"
                android:layout_width="100dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="100일"
                android:textStyle="bold"

                />
            <TextView
                android:id="@+id/tv_100day"
                android:layout_marginLeft="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="(일정)못하겠어"
                android:textStyle="bold"
                android:layout_weight="1"

                />


        </LinearLayout>

        <LinearLayout
            android:paddingVertical="10dp"
            android:layout_width="match_parent"
            android:background="@drawable/border_layout_notop"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_200"
                android:layout_marginLeft="10dp"
                android:layout_width="100dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="200일"
                android:textStyle="bold"

                />
            <TextView
                android:id="@+id/tv_200day"
                android:layout_marginLeft="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_weight="1"

                />


        </LinearLayout>
        <LinearLayout
            android:paddingVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_layout_notop"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_300"
                android:layout_marginLeft="10dp"
                android:layout_width="100dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="300일"
                android:textStyle="bold"

                />
            <TextView
                android:id="@+id/tv_300day"
                android:layout_marginLeft="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_weight="1"

                />


        </LinearLayout>
        <LinearLayout
            android:paddingVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_layout_notop"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_365"
                android:layout_marginLeft="10dp"
                android:layout_width="100dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="1주년"
                android:textStyle="bold"

                />
            <TextView
                android:id="@+id/tv_365day"
                android:layout_marginLeft="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_weight="1"
                />


        </LinearLayout>



    </LinearLayout>

</LinearLayout>