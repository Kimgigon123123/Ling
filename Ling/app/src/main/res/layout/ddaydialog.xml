<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF8FA"
    >

    <ImageView
        android:id="@+id/loading_image"
        android:paddingTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ddayalram"
        />

    <TextView
        android:id="@+id/tv_dday_alarm"
        android:layout_width="match_parent"
        android:gravity="center"

        android:layout_height="wrap_content"
        android:text="d-day가 3일 남은 일정이 있습니다!!"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@+id/loading_image"
        android:layout_centerHorizontal="true"
        />


    <Button
        android:id="@+id/btn_ddayalarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#ffffff"
        android:layout_marginTop="20dp"
        android:text="확인"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@+id/tv_dday_alarm"
        android:layout_centerHorizontal="true"


        />

</RelativeLayout>

