<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="frag_home_menu_cardv">

        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:elevation">20dp</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>

        <item name="cardUseCompatPadding">true</item>
    </style>
    <style name="frag_home_menu_cardv_linear">
       <item name="android:layout_marginBottom">10dp</item>
       <item name="android:layout_gravity">bottom</item>
       <item name="android:orientation">vertical</item>
       <item name="android:layout_width">0dp</item>
       <item name="android:layout_height">match_parent</item>
       <item name="android:layout_weight">1</item>
    </style>
    <style name="frag_home_menu_tv">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>
    <style name="frag_home_imgv">
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>

    </style>
    <style name="ImageView.Corner" parent="">
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">100dp</item>
        <item name="cornerFamily">rounded</item>
    </style>




